        <RadioButton x:Name="C" Content="C. /* This is a comment" HorizontalAlignment="Left" Margin="3,64,0,0" VerticalAlignment="Top" FontFamily="Bebas Kai" FontSize="16" Checked = "HandleCheck"/>
        <RadioButton x:Name="D" Content="D. /* This is a comment /*" HorizontalAlignment="Left" Margin="3,81,0,0" VerticalAlignment="Top" FontFamily="Bebas Kai" FontSize="16" Checked = "HandleCheck"/>

    </Grid>
